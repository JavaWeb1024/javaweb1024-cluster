		delete from
		dh_menu
		where parent_id = #{id,jdbcType=BIGINT}
	</delete>

	<select id="findParentMenuByAdminId" parameterType="java.lang.Integer"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from dh_menu where dh_menu.id in(
		select menu.parent_id from dh_menu
		as
		menu
		left join dh_menu_role on menu.id=dh_menu_role.menus left join
		dh_admin_role on dh_admin_role.roles=dh_menu_role.roles
		where
		menu.del_flag=1
		<if test="id != null and id !=1">
			and dh_admin_role.admins=#{id,jdbcType=BIGINT}
		</if>
		)
		order
		by sort desc
	</select>

	<select id="findMenuByAdminId" parameterType="java.lang.Long"
		resultMap="BaseResultMap">
		select
		menu.authorities
		from dh_menu as
		menu
		left join dh_menu_role on
		menu.id=dh_menu_role.menus left join
		dh_admin_role on
		dh_admin_role.roles=dh_menu_role.roles
		where
		menu.del_flag=1
		<if test="id != null and id !=1">
			and dh_admin_role.admins=#{id,jdbcType=BIGINT}
		</if>
		order
		by sort desc
	</select>

