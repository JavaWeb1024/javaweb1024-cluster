		SELECT count(*) num
		FROM
		dh_menu
		where menu_type=1
	</select>

	<!--获取父节点对应的子节点 -->
	<select id="findChildrenMenu" parameterType="java.lang.Integer"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from dh_menu
		where del_flag =1 and menu_type=2
		<if test="id != null">
			and parent_id =#{id,jdbcType=BIGINT}
		</if>
		order by sort ,id
		desc
	</select>
	<!--删除所有子节点 -->
