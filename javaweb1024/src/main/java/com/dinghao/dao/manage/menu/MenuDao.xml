	<!--获取父节点 -->
	<select id="findParentMenu" parameterType="com.dinghao.entity.vo.manage.menuvo.MenuVo"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from dh_menu
		where menu_type=#{menuType,jdbcType=DECIMAL}
		order by sort
		,id desc
	</select>
	<!--获取父节点 分页 -->
	<select id="findParentMenuPage" parameterType="com.dinghao.entity.vo.manage.menuvo.MenuVo"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from dh_menu
		where menu_type=#{menuType,jdbcType=DECIMAL}
		order by sort
		,id desc
		limit
		#{offset},#{rows}
	</select>

